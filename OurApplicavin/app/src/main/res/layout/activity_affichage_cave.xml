<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.didi.ourapplicavin.controleursIHM.AffichageCave">

        <GridView
            android:id="@+id/tabNomCol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ajoutCave"
            android:background="#b9cefd"
            android:columnWidth="100dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth" />

        <GridView
            android:id="@+id/tabResultatVin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ajoutCave"
            android:layout_marginTop="65dp"
            android:columnWidth="100dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth" />

        <Button
            android:id="@+id/ajoutCave"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#81bcfd"
            android:text="+" />
        <!--android:visibility="invisible"-->

        <Button
            android:id="@+id/ajoutSouhait"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabResultatVin"
            android:layout_toRightOf="@+id/ajoutCave"
            android:background="#fdb5b0"
            android:text="-" />


        <EditText
            android:id="@+id/nbBouteille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabNomCol"
            android:layout_toEndOf="@+id/ajoutSouhait"
            android:layout_toRightOf="@+id/ajoutSouhait"
            android:inputType="number"
            android:text="0" />

        <Button
            android:id="@+id/ok"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tabNomCol"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tabNomCol"
            android:background="#9dfd9a"
            android:text="OK" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabNomCol"
            android:layout_toEndOf="@+id/nbBouteille"
            android:layout_toRightOf="@+id/nbBouteille"
            android:text="bouteille(s)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20dp" />

</RelativeLayout>
