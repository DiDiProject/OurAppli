<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.didi.ourapplicavin.controleursIHM.AffichageRechercheVin">

    <!-- écran d'une recherche (par nom ou par critère) -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Nom du vin:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15dp" />

        <!-- texte pour avoir le nom -->
        <EditText
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView7" />

        <!-- bouton pour faire la recherche avec le nom du dessus -->
        <Button
            android:id="@+id/rechercheParNom"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nom"
            android:text="Recherche" />

        <!-- bouton pour faire une recherche par critère (avancée) -->
        <Button
            android:id="@+id/faireRechercheAvancee"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nom"
            android:layout_toEndOf="@+id/rechercheParNom"
            android:layout_toRightOf="@+id/rechercheParNom"
            android:text="Faire une recherche avancée" />

        <TextView
            android:id="@+id/textRobe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rechercheParNom"
            android:layout_marginTop="15dp"
            android:text="Robe :"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/robe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rechercheParNom"
            android:layout_toEndOf="@+id/textRobe"
            android:layout_toRightOf="@+id/textRobe" />

        <TextView
            android:id="@+id/textCepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/robe"
            android:layout_marginTop="20dp"
            android:text="Cépage :" />

        <EditText
            android:id="@+id/cepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/robe"
            android:layout_toEndOf="@+id/textCepage"
            android:layout_toRightOf="@+id/textCepage" />

        <TextView
            android:id="@+id/textRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cepage"
            android:layout_marginTop="25dp"
            android:text="Région :" />

        <EditText
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cepage"
            android:layout_toEndOf="@+id/textCepage"
            android:layout_toRightOf="@+id/textCepage" />

        <TextView
            android:id="@+id/textMillesime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/region"
            android:layout_marginTop="30dp"
            android:text="Millésime :" />

        <EditText
            android:id="@+id/millesime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/terroir"
            android:layout_toEndOf="@+id/region"
            android:layout_toRightOf="@+id/region" />

        <TextView
            android:id="@+id/textTerroir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textMillesime"
            android:layout_marginTop="35dp"
            android:text="Terroir :" />

        <EditText
            android:id="@+id/terroir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textTerroir"
            android:layout_toEndOf="@+id/textTerroir"
            android:layout_toRightOf="@+id/textTerroir" />

        <Button
            android:id="@+id/rechercheAvancee"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textTerroir"
            android:text="Recherche Avancée" />

    </RelativeLayout>

</ScrollView>
